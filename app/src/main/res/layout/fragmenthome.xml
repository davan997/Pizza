<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/nocolor">
    <RelativeLayout
        android:layout_alignParentTop="true"
        android:id="@+id/searchbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/nocolor">
        <ImageButton
            android:id="@+id/btnavi"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/button"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_sort_white"/>
        <ImageButton
            android:id="@+id/btcart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/button"
            android:layout_marginTop="15dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_cart_white" />
        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchview"
            android:layout_width="335dp"
            android:layout_height="40dp"
            android:layout_below="@+id/btnavi"
            android:layout_marginTop="25dp"
            android:layout_marginStart="10dp"
            android:background="@color/white"
            app:queryHint="Search Pizza"/>
        <ImageButton
            android:id="@+id/btsearch"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/button_white"
            android:layout_below="@+id/btcart"
            android:layout_marginTop="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_filter"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_below="@+id/searchbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.viewpager.widget.ViewPager
            android:layout_alignParentTop="true"
            android:id="@+id/containerbanner"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/containerbanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Collection"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <TextView
            android:layout_marginEnd="5dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/containerbanner"
            android:id="@+id/seeall1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="See All"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclevcollect"
            android:layout_width="wrap_content"
            android:layout_height="125dp"
            android:layout_below="@+id/seeall1"
            android:layout_marginTop="10dp"
            android:numColumns="4" />
        <TextView
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/recyclevcollect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Popular Pizza"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <TextView
            android:layout_marginEnd="5dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/recyclevcollect"
            android:id="@+id/seeall2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="See All"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/containerpizza"
            android:numColumns="2"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/seeall2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>
    </RelativeLayout>
</RelativeLayout>