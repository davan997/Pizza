<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">
    <ImageView
        android:id="@+id/pickitem"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:src="@drawable/pizza1"
        android:scaleType="fitXY"/>
    <ImageButton
        android:id="@+id/btback"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/button"
        android:src="@drawable/ic_back"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"/>
    <ImageView
        android:id="@+id/inforitem"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background" />
    <TextView
        android:id="@+id/txnamepizza"
        android:layout_marginTop="350dp"
        android:layout_marginStart="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name Pizza"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <TextView
        android:layout_marginTop="400dp"
        android:layout_marginStart="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Have Free Home Delivery"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_marginTop="400dp"
        android:layout_marginStart="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Have Free Home Delivery"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/txprice"
        android:layout_marginTop="440dp"
        android:layout_marginEnd="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$45.29"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
        android:textColor="@color/black"/>
    <ImageButton
        android:id="@+id/btminus"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/button_white"
        android:src="@drawable/ic_minus"
        android:layout_marginTop="440dp"
        android:layout_marginStart="30dp"/>
    <EditText
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/nocolor"
        android:text="2"
        android:textSize="23sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="440dp"
        android:layout_marginStart="70dp"/>
    <ImageButton
        android:id="@+id/btplus"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/button"
        android:src="@drawable/ic_plus"
        android:layout_marginTop="440dp"
        android:layout_marginStart="110dp"/>
    <TextView
        android:layout_below="@+id/btminus"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <TextView
        android:layout_below="@+id/btminus"
        android:id="@+id/txinfor"
        android:layout_marginTop="50dp"
        android:layout_width="353dp"
        android:layout_height="100dp"
        android:textStyle="italic"
        android:text="infor"
        android:layout_marginStart="30dp"
        android:textSize="15sp"/>
    <Button
        android:layout_below="@+id/btminus"
        android:layout_width="353dp"
        android:layout_height="65dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/button"
        android:drawableLeft="@drawable/ic_cart_white"
        android:text="Add To Cart"/>
</RelativeLayout>