<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background">
    <ImageView
        android:layout_alignParentTop="true"
        android:id="@+id/pickitem"
        android:layout_width="match_parent"
        android:layout_height="395dp"
        android:src="@drawable/pizza1"
        android:scaleType="fitXY"/>
    <ImageButton
        android:id="@+id/btback"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/button"
        android:src="@drawable/ic_back"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"/>
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circle_heart"
        android:src="@drawable/ic_heart"
        android:layout_marginStart="300dp"
        android:layout_marginTop="310dp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="395dp"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="25dp">
        <ImageView
            android:id="@+id/inforitem"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@drawable/background" />
        <TextView
            android:id="@+id/txnamepizza"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name Pizza"
            android:textSize="27sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <TextView
            android:layout_marginTop="70dp"
            android:layout_marginStart="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Have Free Home Delivery"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/txprice"
            android:layout_marginTop="110dp"
            android:layout_marginStart="300dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="price"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:textColor="@color/black"/>
        <ImageButton
            android:id="@+id/btminus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/button_white"
            android:src="@drawable/ic_minus"
            android:layout_marginTop="110dp"
            android:layout_marginStart="30dp"/>
        <TextView
            android:id="@+id/eachpizza"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/nocolor"
            android:text="0"
            android:textSize="23sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="113dp"
            android:layout_marginStart="70dp"
            android:textColor="@color/black"/>
        <ImageButton
            android:id="@+id/btplus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/button"
            android:src="@drawable/ic_plus"
            android:layout_marginTop="110dp"
            android:layout_marginStart="110dp"/>
        <TextView
            android:layout_marginTop="160dp"
            android:layout_marginStart="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txinfor"
            android:layout_width="353dp"
            android:layout_height="100dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="200dp"
            android:text="infor"
            android:textSize="15sp"
            android:textStyle="italic"
            android:textColor="@color/black"/>
        <Button
            android:id="@+id/addtocart"
            android:layout_width="353dp"
            android:layout_height="65dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="310dp"
            android:background="@drawable/button"
            android:drawableLeft="@drawable/ic_cart_white"
            android:text="@string/addtocart" />
    </androidx.cardview.widget.CardView>
</RelativeLayout>